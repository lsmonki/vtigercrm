      }
      $qq .= ")";
      $r = $obj->dbconn->Exec($qq);
      $n = $r->numrows();
      $a = 0;
      if ( $n > 0 ) {
        $q .= " OR ( c.id in (";
        $xpre = "";
        while ( $a < $n ) {
          $x = $r->get($a,"t_id");
          $q .= $xpre . $x;
          $xpre = ",";
          $a++;
        }
        $r->free();
        $q .= ") )";
      }
#
      $q .= ")";
      $pre = " AND";
    }
    $q .= $pre. "(";
    $q .= "   ( c.s_start < ". $x2 ." and c.s_start >= ". $x1 .")";
    $q .= "or ( c.s_end <   ". $x2 ." and c.s_end >=   ". $x1 .")";
    $q .= "or ( c.s_start < ". $x1 ." and c.s_end >=   ". $x1 .")";
    $q .= ")";
    $q .= " ORDER by c.s_start";

    $r = $obj->dbconn->Exec($q);
    $n = $r->numrows();
    $a = 0;
    while ( $a < $n ) {
      $o = new task($obj->dbconn);
      $o->read_result($r,$a);
      $a++;
      if ( $o->see_ok() ) {
        $obj->callist[$o->id] = &$o;
      }
      unset($o);
    }
    $r->free();
  }
